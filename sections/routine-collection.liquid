{% schema %}
{
  "name": "Routine Collection Tabs",
  "settings": [
    {
      "type": "text",
      "id": "small_heading",
      "label": "Small Top Heading",
      "default": "WHATâ€™S NEW"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "DISCOVER THE COLLECTION"
    }
  ],

  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "image_picker",
          "id": "tab_icon",
          "label": "Tab Icon (small circle image)"
        },
        {
          "type": "text",
          "id": "tab_title",
          "label": "Main Heading",
          "default": "New Unlimited Routine Collection"
        },
        {
          "type": "textarea",
          "id": "tab_description",
          "label": "Description",
          "default": "Foundation that lasts up to 24 hours* for a flawless base"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Right Image (big)"
        },
        {
          "type": "image_picker",
          "id": "img_bottom_left",
          "label": "Bottom Left Image"
        },
        {
          "type": "image_picker",
          "id": "img_bottom_right",
          "label": "Bottom Right Image"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Routine Collection Tabs"
    }
  ]
}
{% endschema %}

<style>
  .routine-right {
    flex: 1;
    max-width: 50%;
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  /* TOP BIG IMAGE - fixed height */
  .routine-right .routine-images > img {
    width: 100%;
    height: 320px;
    object-fit: cover;
    border-radius: 18px;
  }

  /* BOTTOM TWO IMAGES */
  .routine-bottom-images {
    display: flex;
    gap: 14px;
  }

  .routine-bottom-images img {
    width: 50%;
    height: 260px;
    object-fit: cover;
    border-radius: 18px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .routine-right .routine-images > img {
      height: 240px;
    }
    .routine-bottom-images img {
      height: 200px;
    }
  }
</style>

<div class="routine-wrapper" id="routineSection">
  <!-- LEFT COLUMN -->
  <div class="routine-left">
    <p style="font-size:14px; font-weight:600;">{{ section.settings.small_heading }}</p>

    <div class="routine-tabs">
      {% for block in section.blocks %}
        <img
          src="{{ block.settings.tab_icon | img_url: '100x100' }}"
          class="{% if forloop.first %}active{% endif %}"
          data-index="{{ forloop.index0 }}"
        >
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      <div
        class="routine-content"
        data-tab="{{ forloop.index0 }}"
        {% unless forloop.first %}
          style="display:none"
        {% endunless %}
      >
        <h2 class="routine-title">{{ block.settings.tab_title }}</h2>
        <p class="routine-description">{{ block.settings.tab_description }}</p>
        <a class="routine-btn">{{ section.settings.button_label }}</a>
      </div>
    {% endfor %}
  </div>

  <!-- RIGHT COLUMN -->
  <div class="routine-right">
    {% for block in section.blocks %}
      <div
        class="routine-images"
        data-tab-img="{{ forloop.index0 }}"
        {% unless forloop.first %}
          style="display:none"
        {% endunless %}
      >
        <img src="{{ block.settings.main_image | img_url: '700x' }}">
        <div class="routine-bottom-images">
          <img src="{{ block.settings.img_bottom_left | img_url: '400x' }}">
          <img src="{{ block.settings.img_bottom_right | img_url: '400x' }}">
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  const tabs = document.querySelectorAll('#routineSection .routine-tabs img');
  const contents = document.querySelectorAll('#routineSection .routine-content');
  const images = document.querySelectorAll('#routineSection .routine-images');

  tabs.forEach((tab, i) => {
    tab.addEventListener('click', () => {
      tabs.forEach((t) => t.classList.remove('active'));
      tab.classList.add('active');

      contents.forEach((c) => (c.style.display = 'none'));
      images.forEach((img) => (img.style.display = 'none'));

      contents[i].style.display = 'block';
      images[i].style.display = 'block';
    });
  });
</script>
