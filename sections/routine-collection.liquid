{% schema %}
{
  "name": "Routine Collection Tabs",
  "settings": [
    {
      "type": "text",
      "id": "small_heading",
      "label": "Small Top Heading",
      "default": "WHAT’S NEW"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "DISCOVER THE COLLECTION"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "image_picker",
          "id": "tab_icon",
          "label": "Tab Icon (small circle image)"
        },
        {
          "type": "text",
          "id": "tab_title",
          "label": "Main Heading",
          "default": "New Unlimited Routine Collection"
        },
        {
          "type": "textarea",
          "id": "tab_description",
          "label": "Description",
          "default": "Foundation that lasts up to 24 hours* for a flawless base"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Right Image (big)"
        },
        {
          "type": "image_picker",
          "id": "img_bottom_left",
          "label": "Bottom Left Image"
        },
        {
          "type": "image_picker",
          "id": "img_bottom_right",
          "label": "Bottom Right Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Routine Collection Tabs"
    }
  ]
}
{% endschema %}

<style>
  /* Container & layout */
  .routine-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 60px;
    padding: 60px 20px;
    max-width: 1400px;
    margin: 0 auto;
    box-sizing: border-box;
  }

  /* LEFT COLUMN */
  .routine-left {
    flex: 1 1 48%;
    max-width: 48%;
    min-width: 300px;
  }

  .routine-left .small-top {
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.06em;
    color: #222;
    margin-bottom: 18px;
  }

  .routine-tabs {
    display: flex;
    gap: 14px;
    align-items: center;
    margin-bottom: 22px;
  }

  .routine-tabs img {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    cursor: pointer;
    border: 2px solid transparent;
    transition: 180ms ease;
    object-fit: cover;
    box-shadow: 0 2px 6px rgba(0,0,0,0.06);
  }

  .routine-tabs img.active {
    border-color: #111;
    transform: translateY(-2px);
  }

  .routine-title {
    margin: 0 0 18px 0;
    font-size: clamp(36px, 6.8vw, 86px);
    font-weight: 700;
    line-height: 0.98;
    letter-spacing: -0.02em;
    color: #111;
  }

  .routine-description {
    font-size: clamp(14px, 1.6vw, 18px);
    margin: 8px 0 24px;
    max-width: 520px;
    color: #4b4b4b;
  }

  .routine-btn {
    display: inline-block;
    padding: 12px 28px;
    background: #fff;
    border-radius: 10px;
    border: 1px solid #e3e3e3;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    text-decoration: none;
    color: #111;
    transition: transform .14s ease, box-shadow .14s ease;
  }

  .routine-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 26px rgba(0,0,0,0.12);
  }

  /* RIGHT COLUMN — FIXED SHOE-COLLECTION SIZES */
  .routine-right {
    flex: 1 1 50%;
    max-width: 50%;
    min-width: 320px;
    box-sizing: border-box;
  }

  /* Image wrapper */
  .routine-images {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  /* BIG IMAGE — EXACT SHOE COLLECTION HEIGHT */
  .routine-images .main-image {
    width: 100%;
    height: 540px; /* ← big image */
    object-fit: cover;
    border-radius: 16px;
    display: block;
  }

  /* BOTTOM ROW (2 images) */
  .routine-bottom-images {
    display: flex;
    gap: 12px;
  }

  .routine-bottom-images img {
    width: 50%;
    height: 260px; /* ← small images */
    object-fit: cover;
    border-radius: 16px;
    display: block;
  }

  /* RESPONSIVE */
  @media (max-width: 980px) {
    .routine-wrapper {
      flex-direction: column;
      gap: 28px;
      padding: 40px 18px;
    }
    .routine-left, .routine-right {
      max-width: 100%;
      flex-basis: 100%;
    }
    .routine-title { text-align: center; }
    .routine-description { text-align: center; margin-left: auto; margin-right: auto; }
    .routine-tabs { justify-content: center; }

    .routine-images .main-image { height: 360px; }
    .routine-bottom-images img { height: 180px; }
  }

  @media (max-width: 420px) {
    .routine-tabs img { width: 48px; height: 48px; }
    .routine-title { font-size: 30px; }

    .routine-images .main-image { height: 260px; }
    .routine-bottom-images img { height: 140px; }
  }
</style>

<div class="routine-wrapper" id="routineSection">
  <!-- LEFT COLUMN -->
  <div class="routine-left">
    <p class="small-top">{{ section.settings.small_heading }}</p>

    <div class="routine-tabs" role="tablist">
      {% for block in section.blocks %}
        <img
          src="{{ block.settings.tab_icon | img_url: '200x200' }}"
          class="{% if forloop.first %}active{% endif %}"
          data-index="{{ forloop.index0 }}"
          alt="tab icon {{ forloop.index }}"
        >
      {% endfor %}
    </div>

    {% for block in section.blocks %}
      <div
        class="routine-content"
        data-tab="{{ forloop.index0 }}"
        {% unless forloop.first %}
          style="display:none"
        {% endunless %}
      >
        <h2 class="routine-title">{{ block.settings.tab_title }}</h2>
        <p class="routine-description">{{ block.settings.tab_description }}</p>
        <a class="routine-btn" href="#">{{ section.settings.button_label }}</a>
      </div>
    {% endfor %}
  </div>

  <!-- RIGHT COLUMN -->
  <div class="routine-right">
    {% for block in section.blocks %}
      <div
        class="routine-images"
        data-tab-img="{{ forloop.index0 }}"
        {% unless forloop.first %}
          style="display:none"
        {% endunless %}
      >
        {% if block.settings.main_image != blank %}
          <img
            class="main-image"
            src="{{ block.settings.main_image | img_url: '1200x' }}"
            alt="Main image {{ forloop.index }}"
          >
        {% else %}
          <div class="main-image" style="background:#f3f3f3;border-radius:14px;"></div>
        {% endif %}

        <div class="routine-bottom-images">
          {% if block.settings.img_bottom_left != blank %}
            <img src="{{ block.settings.img_bottom_left | img_url: '800x' }}" alt="bottom left {{ forloop.index }}">
          {% else %}
            <div style="background:#f6f6f6;border-radius:12px;"></div>
          {% endif %}

          {% if block.settings.img_bottom_right != blank %}
            <img src="{{ block.settings.img_bottom_right | img_url: '800x' }}" alt="bottom right {{ forloop.index }}">
          {% else %}
            <div style="background:#f6f6f6;border-radius:12px;"></div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
  (function () {
    const section = document.getElementById('routineSection');
    if (!section) return;

    const tabs = section.querySelectorAll('.routine-tabs img');
    const contents = section.querySelectorAll('.routine-content');
    const images = section.querySelectorAll('.routine-images');

    tabs.forEach((tab, i) => {
      tab.addEventListener('click', () => {
        // visuals
        tabs.forEach((t) => t.classList.remove('active'));
        tab.classList.add('active');

        // hide all contents/images
        contents.forEach((c) => (c.style.display = 'none'));
        images.forEach((img) => (img.style.display = 'none'));

        // show selected
        if (contents[i]) contents[i].style.display = 'block';
        if (images[i]) images[i].style.display = 'grid';
        // smooth focus for accessibility
        tab.setAttribute('aria-selected', 'true');
      });
    });

    // make first visible by default (in case Shopify rendered differently)
    if (tabs.length && contents.length && images.length) {
      tabs.forEach((t, idx) => {
        if (idx === 0) t.classList.add('active');
        else t.classList.remove('active');
      });
      contents.forEach((c, idx) => (c.style.display = idx === 0 ? 'block' : 'none'));
      images.forEach((im, idx) => (im.style.display = idx === 0 ? 'grid' : 'none'));
    }
  })();
</script>
