{% schema %}
{
  "name": "KIKO Collection Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Unlimited Brush Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "It’s short, memorable, and positions the brush as more than just a tool—it’s a gateway to confident creativity."
    },
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Large Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_left",
      "label": "Bottom Left Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_right",
      "label": "Bottom Right Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "DISCOVER THE COLLECTION"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "KIKO Collection Layout"
    }
  ]
}
{% endschema %}



<div class="kiko-wrapper">
  
  <!-- LEFT COLUMN -->
  <div class="kiko-left">
      <h2 class="kiko-title">{{ section.settings.heading }}</h2>

      <p class="kiko-desc">
        {{ section.settings.description }}
      </p>

      {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="kiko-btn">
        {{ section.settings.button_label }}
      </a>
      {% endif %}
  </div>

  <!-- RIGHT COLUMN -->
  <div class="kiko-right">

      <div class="kiko-top-img">
        {% if section.settings.top_image %}
          <img src="{{ section.settings.top_image | image_url: width: 1200 }}" alt="">
        {% endif %}
      </div>

      <div class="kiko-bottom-row">

        <div class="kiko-bottom-img">
          {% if section.settings.bottom_left %}
            <img src="{{ section.settings.bottom_left | image_url: width: 800 }}" alt="">
          {% endif %}
        </div>

        <div class="kiko-bottom-img">
          {% if section.settings.bottom_right %}
            <img src="{{ section.settings.bottom_right | image_url: width: 800 }}" alt="">
          {% endif %}
        </div>

      </div>

  </div>

</div>



<style>
.kiko-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 60px 40px;
    gap: 60px;
}

/* LEFT SIDE */
.kiko-left {
    width: 45%;
}

.kiko-title {
    font-size: 42px;
    font-weight: 700;
    margin: 10px 0 20px;
}

.kiko-desc {
    font-size: 16px;
    margin-bottom: 25px;
    line-height: 1.6;
}

.kiko-btn {
    display: inline-block;
    padding: 12px 28px;
    font-size: 14px;
    font-weight: 600;
    border: 1px solid #000;
    text-decoration: none;
    transition: 0.2s;
}

.kiko-btn:hover {
    background: #000;
    color: #fff;
}

/* RIGHT SIDE */
.kiko-right {
    width: 55%;
    display: flex;
    flex-direction: column;
    gap: 22px;
}

/* Top Image */
.kiko-top-img img {
    width: 100%;
    height: 360px;
    object-fit: cover;
    border-radius: 20px;
}

/* Bottom Row */
.kiko-bottom-row {
    display: flex;
    gap: 22px;
}

.kiko-bottom-img img {
    width: 100%;
    height: 280px;
    object-fit: cover;
    border-radius: 20px;
}

/* MOBILE RESPONSIVE */
@media (max-width: 900px) {
    .kiko-wrapper {
        flex-direction: column;
        padding: 40px 20px;
    }

    .kiko-left,
    .kiko-right {
        width: 100%;
    }

    .kiko-top-img img {
        height: 280px;
    }

    .kiko-bottom-img img {
        height: 220px;
    }
}
</style>
