{% doc %}
  @prompt
    I WANT TO ADD a section in the footer that has 3 columns 1st one has texts , second and 3rd columns have the links to different pages 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-columns-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-footer-columns-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-columns-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-footer-column-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
  }

  .ai-footer-column-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    font-size: {{ block.settings.link_size }}px;
    text-decoration: none;
    transition: color 0.3s ease;
    display: block;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-footer-columns-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | times: 1.5 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-footer-columns-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }

    .ai-footer-column-{{ ai_gen_id }}:first-child {
      grid-column: 1 / -1;
    }
  }
{% endstyle %}

<div class="ai-footer-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-columns-container-{{ ai_gen_id }}">
    <div class="ai-footer-columns-grid-{{ ai_gen_id }}">
      <div class="ai-footer-column-{{ ai_gen_id }}">
        {% if block.settings.column_1_heading != blank %}
          <h3 class="ai-footer-column-heading-{{ ai_gen_id }}">{{ block.settings.column_1_heading }}</h3>
        {% endif %}
        {% if block.settings.column_1_text != blank %}
          <div class="ai-footer-column-text-{{ ai_gen_id }}">{{ block.settings.column_1_text }}</div>
        {% endif %}
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        {% if block.settings.column_2_heading != blank %}
          <h3 class="ai-footer-column-heading-{{ ai_gen_id }}">{{ block.settings.column_2_heading }}</h3>
        {% endif %}
        {% for i in (1..5) %}
          {% liquid
            assign page_key = 'column_2_page_' | append: i
            assign page = block.settings[page_key]
          %}
          {% if page != blank %}
            <a href="{{ page.url }}" class="ai-footer-link-{{ ai_gen_id }}">{{ page.title }}</a>
          {% endif %}
        {% endfor %}
      </div>

      <div class="ai-footer-column-{{ ai_gen_id }}">
        {% if block.settings.column_3_heading != blank %}
          <h3 class="ai-footer-column-heading-{{ ai_gen_id }}">{{ block.settings.column_3_heading }}</h3>
        {% endif %}
        {% for i in (1..5) %}
          {% liquid
            assign page_key = 'column_3_page_' | append: i
            assign page = block.settings[page_key]
          %}
          {% if page != blank %}
            <a href="{{ page.url }}" class="ai-footer-link-{{ ai_gen_id }}">{{ page.title }}</a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

