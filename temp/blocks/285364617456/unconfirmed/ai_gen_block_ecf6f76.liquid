{% doc %}
  @prompt
    i want a button for view all 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-view-all-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    {% if block.settings.button_text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% endif %}
  }

  .ai-view-all-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-view-all-button-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-view-all-button-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-view-all-button-wrapper-{{ ai_gen_id }} {
    text-align: {{ block.settings.button_alignment }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-view-all-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-view-all-button-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <a href="{{ block.settings.button_link }}" class="ai-view-all-button-{{ ai_gen_id }}">
    {{ block.settings.button_text }}
    {% if block.settings.show_icon %}
      <span class="ai-view-all-button-icon-{{ ai_gen_id }}">
        {% if block.settings.icon_style == 'arrow' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        {% elsif block.settings.icon_style == 'chevron' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        {% elsif block.settings.icon_style == 'plus' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
        {% endif %}
      </span>
    {% endif %}
  </a>
</div>

