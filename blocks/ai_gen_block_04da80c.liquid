{% doc %}
  @prompt
    i want a section that has 2 columns 1 column has text and the other has image 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-two-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  {% if block.settings.layout == 'image_left' %}
    .ai-two-column-text-{{ ai_gen_id }} {
      order: 2;
    }
    .ai-two-column-image-{{ ai_gen_id }} {
      order: 1;
    }
  {% else %}
    .ai-two-column-text-{{ ai_gen_id }} {
      order: 1;
    }
    .ai-two-column-image-{{ ai_gen_id }} {
      order: 2;
    }
  {% endif %}

  .ai-two-column-text-content-{{ ai_gen_id }} {
    padding: {{ block.settings.text_padding }}px;
  }

  .ai-two-column-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
  }

  .ai-two-column-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 24px;
  }

  .ai-two-column-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .ai-two-column-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-two-column-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-two-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .ai-two-column-text-{{ ai_gen_id }},
    .ai-two-column-image-{{ ai_gen_id }} {
      order: unset !important;
    }

    {% if block.settings.mobile_layout == 'image_first' %}
      .ai-two-column-image-{{ ai_gen_id }} {
        order: 1;
      }
      .ai-two-column-text-{{ ai_gen_id }} {
        order: 2;
      }
    {% else %}
      .ai-two-column-text-{{ ai_gen_id }} {
        order: 1;
      }
      .ai-two-column-image-{{ ai_gen_id }} {
        order: 2;
      }
    {% endif %}

    .ai-two-column-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-two-column-text-content-{{ ai_gen_id }} {
      padding: 0;
    }
  }
{% endstyle %}

<div class="ai-two-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-container-{{ ai_gen_id }}">
    <div class="ai-two-column-grid-{{ ai_gen_id }}">
      <div class="ai-two-column-text-{{ ai_gen_id }}">
        <div class="ai-two-column-text-content-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-two-column-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
          {% endif %}

          {% if block.settings.description != blank %}
            <div class="ai-two-column-description-{{ ai_gen_id }}">
              {{ block.settings.description }}
            </div>
          {% endif %}

          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="ai-two-column-button-{{ ai_gen_id }}">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-two-column-image-{{ ai_gen_id }}">
        <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-two-column-empty-state-{{ ai_gen_id }}">
                Next, add an image
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

