{% layout 'theme' %}

<div class="faq-wrapper">
  <h1>Frequently Asked Questions</h1>

  <div class="faq-item">
    <button class="faq-question">What if I receive damaged / wrong product?</button>
    <div class="faq-answer">Please contact us within 48 hours with photos. Weâ€™ll arrange a replacement or refund.</div>
  </div>

  <!-- Repeat for other questions -->
</div>

<script>
  document.querySelectorAll('.faq-question').forEach(btn => {
    btn.addEventListener('click', () => {
      const answer = btn.nextElementSibling;
      answer.classList.toggle('visible');
    });
  });
</script>

<style>
  .faq-wrapper {
    max-width: 800px;
    margin: auto;
    padding: 20px;
  }
  .faq-question {
    background: none;
    border: none;
    font-weight: bold;
    cursor: pointer;
    padding: 10px;
    width: 100%;
    text-align: left;
  }
  .faq-answer {
    display: none;
    padding: 10px;
    border-left: 2px solid #ccc;
  }
  .faq-answer.visible {
    display: block;
  }
</style>